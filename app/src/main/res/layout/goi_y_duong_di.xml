<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Gợi ý địa điểm du lich"
        android:padding="4dp"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:background="#156915"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:text="Số Tiền Muốn Chi/1 Nguời (Ngàn VND):"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:padding="2dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/money"
        android:layout_marginTop="3dp"
        android:hint="200"
        android:textColorHint="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_alignTop="@+id/search"
            android:layout_alignBottom="@+id/search"
            android:id="@+id/autoText"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/search"
            android:textColorHint="@color/colorAccent"
            android:hint="(Chủ đề)Lãng mạn phiêu luu"
            android:layout_height="wrap_content"
            android:completionThreshold= "1"/>
        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/search"
            android:text="Search"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:background="@drawable/custom_click_button"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:text="Bản đồ đề xuất cho bạn hôm nay"
        android:padding="4dp"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:background="#156915"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
</ScrollView>