<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarAuthor"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_width="96dp"
        android:layout_height="96dp"
     />
    <LinearLayout
        android:layout_toRightOf="@+id/avatarAuthor"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/authorName"
            android:padding="2dp"
            android:textSize="17sp"
            android:textColor="#FF0000"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="#eeff00"
            android:id="@+id/rating"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="The catherdal is very unique and attractive because of the pink colour.
        Near the catherdal there is a local bus stop. But the front door is always
        closed that the entrace is actually behind the alley, and many tourists may
        always misunderstand the route of entering into"
            android:textSize="14sp"
            android:textColor="#072084"
            android:id="@+id/comment"/>
    </LinearLayout>
</RelativeLayout>
